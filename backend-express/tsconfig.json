{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "pretty": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "baseUrl": "./src",
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**"
  ]
}
